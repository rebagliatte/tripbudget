<%
  # Locals
  #   - trip
  #   - action
%>

<%= simple_form_for(trip, html: { class:'form-horizontal' }, url: { action: action }) do |form| %>

  <%= error_messages_for(trip) %>

  <%= form.input :name %>
  <%= form.input :description %>
  <%= form.input :is_public, as: :radio_buttons %>
  <%= form.input :invitees, hint: 'Comma separated list of emails' %>
  <%= form.association :owner %>

  <div class="form-actions">
    <%= submit_tag("#{action} trip", class: 'btn btn-primary') %>
    <%= link_to 'Cancel', trips_path, class: 'btn' %>
  </div>
<% end %>
