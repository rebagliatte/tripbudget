<!DOCTYPE html>
<html>
<head>
  <title>Tripbudget</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <%= link_to 'TripBudget', root_path, class: 'brand' %>

      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Trips", trips_path %></li>
        </ul>

        <ul class="nav pull-right">
          <li class="dropdown settings">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Settings
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li></li>
            </ul>
          </li>
          <% if current_user %>
            <li class="dropdown authentication">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= image_tag current_user.image, alt: current_user.nickname %>
                <%= current_user.nickname %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Sign out', signout_path %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign in', 'auth/twitter' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>

<sections class="container-fluid">
  <%= yield %>
</section>

<%= javascript_include_tag 'application' %>
<%= javascript_tag do %>
  <%= yield :javascript %>
<% end %>

</body>
</html>
